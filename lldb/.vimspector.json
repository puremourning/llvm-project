{
  "$schema": "https://puremourning.github.io/vimspector/schema/vimspector.schema.json",
  "configurations": {
    "Run lldb": {
      "variables": [
        {
          "defdebuggee": "$HOME/.vim/bundle/vimspector/tests/testdata/cpp/simple/struct",
          "defcwd": "$HOME/.vim/bundle/vimspector/tests/testdata/cpp/simple"
        }
      ],
      "adapter": "CodeLLDB",
      "default": true,
      "configuration": {
        "request": "launch",
        "program": "$(workspaceRoot}/../build/bin/lldb",
        "args": [ "${debugge:${defdebuggee\\}}", "*${args}" ],
        "cwd": "${wd:${defcwd\\}}",
        "stopOnEntry#json": "${StopOnEntry:false}",
        "expressions": "native",
        "preRunCommands": [
          "type summary add -o \"return bytes( valobj.GetChildMemberWithName( '__data' ).GetPointeeData( 0, int(valobj.GetChildMemberWithName( '__size' ).value) ).uint8s ).decode( 'utf-8' )\" -x std::.*::basic_string_view std::.*::string_view"
        ]
      }
    }
  }
}
